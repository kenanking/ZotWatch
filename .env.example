# ZotWatch Environment Variables
# Copy this file to .env and fill in your values

# === Required ===

# Zotero API credentials
# Get your API key from: https://www.zotero.org/settings/keys
ZOTERO_API_KEY=your_zotero_api_key_here
# Your Zotero user ID (numeric), found in your Zotero profile URL
ZOTERO_USER_ID=your_zotero_user_id_here

# Voyage AI API key for text embeddings and rerank
# Get your API key from: https://dashboard.voyageai.com/organization/api-keys
# Required if using provider: "voyage" in config.yaml
VOYAGE_API_KEY=your_voyage_api_key_here

# DashScope (Alibaba Cloud) API key for text embeddings and rerank
# Get your API key from: https://bailian.console.aliyun.com/?tab=model#/api-key
# Required if using provider: "dashscope" in config.yaml
DASHSCOPE_API_KEY=your_dashscope_api_key_here

# IMPORTANT: When interests.enabled=true in config.yaml,
# embedding.provider and scoring.rerank.provider MUST use the same provider
# Both must be set to either "voyage" or "dashscope"

# OpenRouter API key for AI summaries
# Get your API key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Kimi (Moonshot AI) API key for AI summaries
# Get your API key from: https://platform.moonshot.cn/console/api-keys
MOONSHOT_API_KEY=your_moonshot_api_key_here

# DeepSeek API key for AI summaries
# Get your API key from: https://platform.deepseek.com/api_keys
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# === Optional ===

# Polite API identifier (recommended for Crossref)
CROSSREF_MAILTO=your_email@example.com
